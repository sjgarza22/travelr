<div class="container">
    <div class="row">
        <div class="col-md pt-3 pb-3">
            <div class="d-flex justify-content-center">
                <h1>New Trip Form</h1>
            </div>
            <div class="d-flex justify-content-center">
                <%= form_for @trip do |f| %>
                    <%= f.label :title %>
                    <%= f.text_field :title %><br>

                    <%= f.submit %>
                <% end %>
            </div>
        </div>
    </div>
</div>